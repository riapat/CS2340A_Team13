<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.RecipeScreen">

    <TextView
        android:id="@+id/textViewRecipe"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:padding="10sp"
        android:text="Recipe"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="149dp" />

    <TextView
        android:id="@+id/textViewIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="Ingredients"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="231dp" />

    <TextView
        android:id="@+id/textViewQuantities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:text="Quantities"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="313dp" />

    <EditText
        android:id="@+id/usernameFieldRecipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe Name"
        android:inputType="text"
        android:padding="10sp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewIngredients"
        app:layout_constraintTop_toBottomOf="@+id/textViewRecipe"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/usernameFieldIngredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seperate with commas"
        android:inputType="text"
        android:padding="10sp"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewQuantities"
        app:layout_constraintTop_toBottomOf="@+id/textViewIngredients"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/usernameFieldQuantities"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Seperate with commas with same order as ingredients list"
        android:inputType="text"
        android:padding="10sp"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/textViewQuantities"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/PersonalInfo"
        android:layout_width="113dp"
        android:layout_height="57dp"
        android:layout_marginStart="16dp"
        android:layout_weight="1"
        android:text="Personal Info"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="92dp" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Recipe Screen"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/navigation_bar" />


    <!-- Navigation bar -->
    <LinearLayout
        android:id="@+id/navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#444444"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/InputMeal"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Input Meal"
            android:textSize="14sp" />

        <Button
            android:id="@+id/Recipe"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Recipe"
            android:textSize="14sp" />

        <Button
            android:id="@+id/Home"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textSize="14sp" />

        <Button
            android:id="@+id/Ingredients"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ingredients"
            android:textSize="14sp" />

        <Button
            android:id="@+id/ShoppingList"
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Shopping List"
            android:textSize="14sp" />
    </LinearLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingAddRecipeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:clickable="true"
        android:src="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="559dp" />

    <ListView
        android:id="@+id/RecipeList"
        android:layout_width="260dp"
        android:layout_height="355dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="75dp"
        tools:layout_editor_absoluteY="171dp" />


</androidx.constraintlayout.widget.ConstraintLayout>