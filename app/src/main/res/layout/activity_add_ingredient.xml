<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addIngredientLayout"
    android:layout_width="350dp"
    android:layout_height="600dp"
    android:layout_gravity="center">
    <!--New Recipe  Text  View -->


    <TextView
            android:id="@+id/NewRecipeTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10sp"
            android:text="New Recipe"
            android:textColor="#067F0B"
            android:textSize="34sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    <!--Enter Name ID - recipeNameEditText -->

    <!--New Recipe Items Listview ID: addRecipeItemListView -->

    <!--add Ingredient Name - addIngredientEditText -->
    <!--add Ingredient Name - addIngredientEditText -->

    <EditText
        android:id="@+id/recipeNameEditText"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:hint="Recipe Name"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/NewRecipeTextField"
        tools:ignore="Autofill,HardcodedText" />


    <ScrollView
        android:id="@+id/addRecipeItemScrollView"
        android:layout_width="309dp"
        android:layout_height="267dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeNameEditText"
        app:layout_constraintVertical_bias="0.023">

        <LinearLayout
            android:id="@+id/addRecipeItemLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            ></LinearLayout>
    </ScrollView>

    <EditText
        android:id="@+id/addIngredientEditText"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:hint="Ingredient"
        android:inputType="text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipeItemScrollView"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="HardcodedText" />

    <EditText
        android:id="@+id/quantityEditText"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:hint="oz"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/addIngredientEditText"
        app:layout_constraintTop_toBottomOf="@+id/addRecipeItemScrollView"
        app:layout_constraintVertical_bias="0.4"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/submitRecipeButton"
        android:layout_width="117dp"
        android:layout_height="62dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#94B36F"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Submit \n Recipe"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/addIngredientButton"
        android:layout_width="117dp"
        android:layout_height="62dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="4dp"
        android:backgroundTint="#115B14"
        android:paddingTop="10sp"
        android:paddingBottom="10sp"
        android:text="Add Ingredient"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#0F5312"
        android:textColorLink="#0A680D"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addIngredientEditText"
        app:layout_constraintVertical_bias="0.568" />

    <TextView
        android:id="@+id/addNewIngredientTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:text="Add a New Ingredient"
        android:textColor="#067F0B"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addRecipeItemScrollView" />


</androidx.constraintlayout.widget.ConstraintLayout>